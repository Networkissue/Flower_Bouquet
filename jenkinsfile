pipeline{
    agent any 
    
    environment {
        DOCKER_IMAGE = 'Static_website'
        DOCKER_REGISTRY = 'dnetworkhub'
    }

    stages{
        stage("GIT CLONING..."){
            steps{
                git url: 'https://github.com/Networkissue/Flower_Bouquet.git', branch: 'main'
                
            }
        }

        stage('DOCKER BUILD...'){
            steps{
                script{
                    sh "docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE} ."
                }
            }
        }

        stage('PUSH TO DOCKERHUB...'){
            
        }
    }

    
}